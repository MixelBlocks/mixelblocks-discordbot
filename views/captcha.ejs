<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Mixelblocks DiscordBot ReCaptcha</title>

        <!-- Jquery -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <!-- Bootstrap -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous" />
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

        <!-- Google ReCaptcha -->
        <script defer src="https://www.google.com/recaptcha/api.js"></script>

        <!-- Internal -->
        <link rel="stylesheet" href="/static/styles/main.css" />
        <script defer src="/static/scripts/main.js"></script>
    </head>
    <body class="noselect">
        <% if(renderForm) { %> <% if(!verified) { %>
        <form id="captchaForm" class="form-group" method="POST">
            <center>
                <div class="form-check">
                    <center><div id="captcha" class="g-recaptcha" data-sitekey="<%= captchaKey %>"></div></center>
                </div>
                <br /><br /><br />
            </center>
            <center><button type="submit" class="btn btn-primary">Submit</button></center>
        </form>
        <% } else { %>
        <h2 class="verified">Du bist jetzt verifiziert und kannst alles auf dem Discordserver machen.</h2>
        <% } %> <% } else { %>
        <h2 class="verified">Ung√ºltiger CaptchaCode!</h2>
        <% } %>
    </body>
</html>
